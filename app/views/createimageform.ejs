<!DOCTYPE html>
<html lang="en">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<head>
    <meta charset="UTF-8">
    <title>Imaginator</title>
  <link rel="stylesheet" href="/css/createform.css">
  <script>
    $(document).ready(function(){
      $("#logout").click(function(){
        $.post("User/logout").then(window.location.href = "<%=baseurl%>");
      });
      $("#load_image").click(function () {
        window.location.href = "<%=baseurl%>createform";
      });
      $("#update_image").click(function () {
        window.location.href = "<%=baseurl%>my_images";
      });
      $("#public").click(function () {
          document.getElementById("visibility").value= "public";
        alert("the image will be public");
      });
      $("#private").click(function () {
        document.getElementById("visibility").value= "private";
        alert("the image will be private");
      });
      $("#profile").click(function () {
        window.location.href = "<%=baseurl%>profile";
      });

    });
  </script>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%=baseurl%>home">Imaginator</a>
    </div>
    <div class="right">
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Images<span class="caret"></span></a>
            <ul class="dropdown-menu" style="background-color: #757575">
              <li>
                <input type="button"  class="btn btn-link" id="update_image" value="Update Images">
              </li>
              <li>
                <input type="button"  class="btn btn-link" id="load_image" value="Load Image">
              </li>
            </ul>
          </li>
          <li>
            <a role="button" id="profile">
              Profile
            </a>
          </li>
          <li>
            <button type="button" id="logout" class="btn btn-primary">Log Out</button>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>

<div class="container bootstrap snippet">

  <div class="jumbotron text-center" style="min-height:400px;height:auto;">
    <div class="col-md-20 col-md-offset-2">
      <form class="form-horizontal" action="Image/" method="post" enctype="multipart/form-data">
        <div class="form-group text-center">
          <div class="col-sm-10 reg-icon">
            <span class="title">Image Data</span>
          </div>
        </div>
        <div class="form-group ">
          <div class="col-sm-12">
            <input type="text" class="form-control" id="title" name="title" placeholder="Title">
          </div>
          <div class="col-sm-12">
            <input type="text" class="form-control" id="format" name="format" placeholder="Format">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-7">
            <input type="text" class="form-control" id="visibility" name="visibility" value="public" readonly>
          </div>
          <div class="btn-group ">
            <a class="btn btn-primary"><i class="fa fa-eye fa-fw"></i> Visiblity</a>
            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
              <span class="fa fa-caret-down" title="Toggle dropdown menu"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a id="public"><i class="fa fa-users fa-fw"></i> Public </a></li>
              <li><a id="private"><i class="fa fa-user fa-fw"></i> Private </a></li>
            </ul>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="number" class="form-control" id="width" name="width" placeholder="Width">
          </div>
          <div class="col-sm-12">
            <input type="number" class="form-control" id="height" name="height" placeholder="Height">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="date" class="form-control" id="capture" name="capture" placeholder="Capture-date">
          </div>
          <div class="col-sm-12">
            <input type="number" class="form-control" id="quality" name="quality" placeholder="Resolution">
          </div>
        </div>
        <div class="form-group">
          <div class="btn-group">
            <input id="image" name="image" accept="image/*" type="file" class="btn btn-primary">
          </div>
        </div>
        <div class="form-group">
          <div class="btn-group">
            <button type="submit" name="submit" id="load" class="btn btn-info">
              <span class="glyphicon glyphicon-share-alt"></span>
              Load
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
</body>
</html>
